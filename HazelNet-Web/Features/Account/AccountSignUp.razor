@page "/SignUp"
@layout EmptyLayout

@using System.ComponentModel.DataAnnotations

<PageTitle>Account Sign Up</PageTitle>

<EditForm Model="@model" OnValidSubmit="OnValidSubmit">
<DataAnnotationsValidator/>

<MudContainer MaxWidth="MaxWidth.Large" Class="text-center d-flex align-center">
    <MudGrid Spacing="0" Justify="Justify.Center" Class="flex-grow-1">

        <MudItem xs="12" md="5"  Class="d-flex justify-center align-center">
            <MudPaper Class="pa-15 ma-2 flex-grow-1" Outlined="false" Elevation="0">

                <MudStack>
                    <MudText Typo="Typo.h1" Color="Color.Default" Align="Align.Center">
                        Registration
                    </MudText>
                    
                    <MudCard Elevation="0">
                        <MudCardContent>
                            <MudTextField Label="Username" HelperText="Max. 30 characters"
                                          @bind-Value="model.Username" For="@(() => model.Username)"
                                          Adornment="Adornment.End" AdornmentIcon="@Icons.Material.Filled.Person"/>
                            <MudTextField Label="Email" Class="mt-3"
                                          @bind-Value="model.Email" For="@(() => model.Email)"
                                          Adornment="Adornment.End" AdornmentIcon="@Icons.Material.Filled.Email"/>
                            <MudTextField Label="Password" HelperText="Choose a strong password" Class="mt-3"
                                          @bind-Value="model.Password" For="@(() => model.Password)" 
                                          InputType="InputType.Password" Clearable="true"
                                          Adornment="Adornment.End" AdornmentIcon="@Icons.Material.Filled.Lock"/>
                            <MudTextField Label="Check Password" HelperText="Repeat the password" Class="mt-3"
                                          @bind-Value="model.Password2" For="@(() => model.Password2)" 
                                          InputType="InputType.Password" Clearable="true"
                                          Adornment="Adornment.End" AdornmentIcon="@Icons.Material.Filled.Password"/>
                        </MudCardContent>
                        <MudCardActions>
                            <MudButton ButtonType="ButtonType.Submit" Variant="Variant.Filled" 
                                       Color="Color.Primary" Class="ml-auto" Size="Size.Large"
                                       FullWidth="true">
                                Register
                            </MudButton>
                        </MudCardActions>
                        <MudText Typo="Typo.caption" Align="Align.Center" Color="Color.Dark">
                            or signup with
                        </MudText> 
                        <MudStack Row="true" Spacing="3" Justify="Justify.Center">
                            <MudIconButton Icon="@Icons.Custom.Brands.Google" Color="Color.Dark" aria-label="google" Size="Size.Large"/>
                            <MudIconButton Icon="@Icons.Custom.Brands.Facebook" Color="Color.Dark" aria-label="facebook" Size="Size.Large"/>
                            <MudIconButton Icon="@Icons.Custom.Brands.GitHub" Color="Color.Dark" aria-label="github" Size="Size.Large"/>
                            <MudIconButton Icon="@Icons.Custom.Brands.LinkedIn" Color="Color.Dark" aria-label="linkedin" Size="Size.Large"/>

                        </MudStack>
                    </MudCard>
                </MudStack>

            </MudPaper>
        </MudItem>


        <MudItem xs="12" md="7" Class="d-flex" >
            <MudPaper Class="pa-16 ma-5 flex-grow-1 d-flex" Outlined="true" Elevation="0"
                      Style="background: #7e6fff; 
                      border-radius: 100px 10px 10px 100px">
                <MudStack AlignItems="AlignItems.Center" Justify="Justify.Center" 
                          Class="flex-grow-1">
                    <MudText Typo="Typo.h1" Align="Align.Center" Style="color: #fcfcfd">
                        Welcome to HazelNet!
                    </MudText>
                    <MudText Typo="Typo.body1" Align="Align.Center" Style="color: #fcfcfd"
                             Class="mt-10">
                        Already have an account?
                    </MudText>

                    <MudButton Variant="Variant.Outlined" class="mb-10" Size="Size.Large"
                               Href="/Login"
                               Style="background-color: transparent; color: white; width: 200px; height: 60px; border-color: white">
                        Login 
                    </MudButton>
                    
                </MudStack>
            </MudPaper>
        </MudItem>

    </MudGrid>
</MudContainer>

</EditForm>

@code {
    public RegisterAccountForm model = new RegisterAccountForm();
    private bool success;
    
    
    
    
    public class RegisterAccountForm
    {
        [Required]
        [StringLength(30, ErrorMessage = "Name length can't be more than 30.")]
        public string Username { get; set; }

        [Required]
        [EmailAddress]
        public string Email { get; set; }

        [Required]
        [StringLength(100, MinimumLength = 8, ErrorMessage = "The {0} must be at least {2} characters long.")]
        [RegularExpression(@"^((?=.*[a-z])(?=.*[A-Z])(?=.*\d)).+$", ErrorMessage = "Password must contain at least one uppercase letter, one lowercase letter, and one digit.")]
        public string Password { get; set; }

        [Required(ErrorMessage = "   must match the password above")]
        [Compare(nameof(Password))]
        public string Password2 { get; set; }

    }

    private void OnValidSubmit(EditContext context)
    {
        success = true;
        StateHasChanged();
    }
    
}